  "exampleModal1":{
    "type":"form",
    "size": "xlarge",
    "static": true,
    "header":"Form Modal Sample",
    "body":{
      "content":{
        "target":"#",
        "method":"post",
        "elements":[
          {
            "type":"text",
            "icon": null,
            "label":"Name",
            "placeholder":"Enter your name",
            "required":true
          },
          {
            "type":"email",
            "icon": null,
            "label":"Email",
            "placeholder":"Enter your email",
            "required":true
          },
          {
            "type":"textarea",
            "icon": null,
            "label":"Message",
            "placeholder":"Enter your message",
            "required":true
          }
        ]
      }
    },
    "footer":{
      "Close":{"type":"dismiss","color":"secondary"},
      "Submit":{"type":"submit","class":"primary"}
    }
  },
